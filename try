    <!-- Encode the entire sms: URL for the QR service -->
    <img
      class="qr"
      src="https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=sms%3A%2B447427949007%3Fbody%3DPlease%2520include%2520a%2520customer%2520name%252C%2520email%2520address%252C%2520invoice%2520address%2520and%2520job%2520details.%2520Example%253A%2520Sarah%2520Jones%252C%2520sarah.jones%2540example.com%252C%252012%2520Maple%2520Road%252C%2520Bournemouth%2520BH2%25205TR%2520%25E2%2580%2593%25204.8x3.6%2520Camaro%2520LVT%2520in%2520kitchen.%2520Uplift%2520old.%2520Needs%2520ply-boarding.%25202%2520brass%2520singles."
      alt="QR code to text BillyBot"
    />

    <p class="muted" style="margin-top:12px;">Or text manually: <strong>+44&nbsp;7427&nbsp;949&nbsp;007</strong></p>
  </div>

  <script>
    // Device detection
    const ua = navigator.userAgent || '';
    const isIOS = /iPhone|iPad|iPod/i.test(ua);
    const isAndroid = /Android/i.test(ua);
    const isMobile = isIOS || isAndroid;

    // SMS payload
    const number = '+447427949007';
    const body = 'Please include a customer name, email address, invoice address and job details. Example: Sarah Jones, sarah.jones@example.com, 12 Maple Road, Bournemouth BH2 5TR – 4.8x3.6 Camaro LVT in kitchen. Uplift old. Needs ply-boarding. 2 brass singles.';

    function buildSmsUrl() {
      const encBody = encodeURIComponent(body);
      // iOS is happier with &body=; Android prefers ?body=
      if (isIOS)   return `sms:${number}&body=${encBody}`;
      if (isAndroid) return `sms:${number}?body=${encBody}`;
      return null; // desktop
    }

    document.getElementById('smsCta').addEventListener('click', (e) => {
      e.preventDefault();
      const url = buildSmsUrl();
      if (!url) {
        alert('Open this page on your phone to text BillyBot, or scan the QR code.');
        return;
      }
      // Open via a user-initiated click to avoid “download” behavior
      const a = document.createElement('a');
      a.href = url;
      a.style.display = 'none';
      document.body.appendChild(a);
      a.click();
      a.remove();
    });
  </script>
